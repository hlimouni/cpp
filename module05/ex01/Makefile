CXX=clang++
CFLAGS=-Wall -Wextra -Werror
NAME=ex01

HDR=./Bureaucrat.hpp ./Form.hpp\

SRC=./main.cpp \
./Bureaucrat.cpp \
./Form.cpp

OBJ=$(SRC:.cpp=.o)

.PHONY:clean fclean re all

all: $(NAME)

$(NAME) : $(OBJ)
	$(CXX) $(CFLAGS) $^ -o $@

$(OBJ) : %.o : %.cpp $(HDR)
	$(CXX) $(CFLAGS) -c $< -o $@

clean :
	@rm -f $(OBJ)

fclean : clean
	@rm -f $(NAME)

re : fclean all
